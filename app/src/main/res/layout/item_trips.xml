<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="236dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/circle_layout_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/medium_green_400" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="78dp"
            android:background="@drawable/shape_circle_ex_red" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/circle_layout_4"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_marginRight="0dp"
            android:scaleType="centerCrop"
            android:id="@+id/image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_medium"
                android:text="Flight from Delhi to Singapore"
                android:textColor="@color/app_dark_100"
                android:textSize="14sp"
                android:textStyle="normal"
                android:id="@+id/text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_regular"
                android:text="You and 1 more person â€¢ 12 Dec"
                android:textColor="@color/medium_green_600"
                android:textSize="12sp"
                android:id="@+id/date"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>